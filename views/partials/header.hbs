{{!-- views/partials/header.hbs --}}
<header class="header">
  <div class="container">
    <div class="header-content">
      <div class="logo">
        <a href="/">MED_EDU</a>
      </div>
      <nav class="nav">
        <a href="/">Головна</a>
        <a href="/courses">Навчальні курси</a>
        <a href="/certification">Сертифікація</a>
        <a href="/about">Про нас</a>
      </nav>
      <div class="header-actions">
        <a href="tel:+380800331102" class="phone">(067) 141-12-76</a>
        {{#if user}}
        <div class="dropdown d-inline-block">
          <a href="#" class="btn-secondary dropdown-toggle d-flex align-items-center" id="profileDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="padding: 0.25rem 0.75rem;">
            <img src="{{user.photo_url}}" alt="avatar" class="rounded-circle" width="32" height="32" style="object-fit:cover; margin-right:8px;">
            {{user.full_name}}
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profileDropdown">
            <a class="dropdown-item" href="/profile">Профіль</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/logout">Вийти</a>
          </div>
        </div>
        {{else}}
        <a href="#" class="btn-secondary" onclick="showModal({title: 'Вхід', body: document.getElementById('loginFormTemplate').innerHTML, footer: ''}); return false;">Вхід</a>
        {{/if}}
        <a href="#enrollment" class="btn-primary">Записатися</a>
      </div>
    </div>
  </div>
</header>