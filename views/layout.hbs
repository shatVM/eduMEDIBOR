{{!-- views/layout.hbs --}}
<!DOCTYPE html>
<html lang="uk">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}} - MED_EDU</title>
  <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><rect fill='%231e4d8b' width='100' height='100'/><text x='50' y='65' font-size='60' font-weight='bold' fill='white' text-anchor='middle' font-family='Arial'>M</text></svg>">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  {{> header}}
  
  <main>
    {{{body}}}
  </main>
  
  {{> footer}}
  
  {{> modal}}

  <!-- Hidden login form template for modal injection -->
  <div id="loginFormTemplate" style="display:none">
    <button type="button" class="btn btn-danger btn-block mb-2" onclick="googleLogin()">
      <img src="https://developers.google.com/identity/images/g-logo.png" style="width:20px; margin-right:8px; vertical-align:middle;"> Вхід через Google
    </button>
    <div class="text-center text-muted mb-2">або</div>
    <form id="loginForm">
      <div class="form-group">
        <label for="loginEmail">Email</label>
        <input type="email" class="form-control" id="loginEmail" placeholder="email@example.com" required>
      </div>
      <div class="form-group">
        <label for="loginPassword">Пароль</label>
        <input type="password" class="form-control" id="loginPassword" placeholder="Пароль" required>
      </div>
      <div id="loginError" class="text-danger mt-2" style="display:none;"></div>
      <button type="submit" class="btn btn-primary btn-block">Увійти</button>
    </form>
  </div>
  
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
  <script src="/js/login.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-auth.js"></script>
  <script src="/js/firebase-auth.js"></script>
  <script src="/js/modal.js"></script>
  <script src="/js/addresses-map.js"></script>
</body>
</html>







