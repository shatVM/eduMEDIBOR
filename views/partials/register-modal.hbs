<!-- views/partials/register-modal.hbs -->
<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="registerModalLabel">Реєстрація</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="registerForm">
          <div class="form-group">
            <label for="registerFullName">Повне ім'я</label>
            <input type="text" class="form-control" id="registerFullName" name="full_name" placeholder="Іван Петренко" required>
          </div>
          <div class="form-group">
            <label for="registerEmail">Email</label>
            <input type="email" class="form-control" id="registerEmail" name="email" placeholder="email@example.com" required>
          </div>
          <div class="form-group">
            <label for="registerPassword">Пароль</label>
            <input type="password" class="form-control" id="registerPassword" name="password" placeholder="Мінімум 6 символів" required>
            <small class="form-text text-muted">Пароль повинен містити принаймні 6 символів</small>
          </div>
          <div class="form-group">
            <label for="registerPasswordConfirm">Підтвердіть пароль</label>
            <input type="password" class="form-control" id="registerPasswordConfirm" name="passwordConfirm" placeholder="Повторіть пароль" required>
          </div>
          <div id="registerError" class="text-danger mt-2" style="display:none;"></div>
          <div id="registerSuccess" class="text-success mt-2" style="display:none;"></div>
          <button type="submit" class="btn btn-success btn-block">Зареєструватися</button>
        </form>
        <hr>
        <p class="text-center mb-0">
          Вже маєте акаунт? 
          <a href="#" data-dismiss="modal" data-toggle="modal" data-target="#loginModal" class="text-primary font-weight-bold">Увійти</a>
        </p>
      </div>
    </div>
  </div>
</div>
